doctype html
html(lang='ru')
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
        meta(name='theme-color', content='#ffffff')
        meta(name='msapplication-navbutton-color', content='#ffffff')
        meta(name='csrf-token', content=_csrf)
        block meta
        block title
            title #{title} - Play4Play
        link(rel='apple-touch-icon', sizes='120x120', href='/images/icons/apple-touch-icon.png')
        link(rel='icon', type='image/png', sizes='32x32', href='/images/icons/favicon-32x32.png')
        link(rel='icon', type='image/png', sizes='16x16', href='/images/icons/favicon-16x16.png')
        link(rel='manifest', href='/images/icons/manifest.json')
        link(rel='mask-icon', href='/images/icons/safari-pinned-tab.svg', color='#5bbad5')
        link(rel='shortcut icon', href='/images/icons/favicon.ico')
        meta(name='msapplication-config', content='/images/icons/browserconfig.xml')
        meta(name='theme-color', content='#ffffff')

        link(rel='stylesheet', href='/newcss/main.css?3')
        block stylesheets

    body.white-skin
        include partials/header
        
        if !fullscreen
            .container
                include partials/flash
                block content
        else
            .container-fluid
                include partials/flash
                block content
        include partials/footer

        script(src='//cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.4/socket.io.slim.js')
        script(src='/js/lib.min.js?3')
        script(src='/js/main.min.js?3')

        if user && user.isAdmin
            script(src='/js/fFjbJie29fkllf.min.js?3')
        block scripts

