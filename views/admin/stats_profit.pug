extends ../layout

block content
    include partials/stats_header
    .margin-bottom-sm
    .row.margin-bottom-sm
        .col-md-2
            input.form-control(type="text", name="daterange", id='date-range' )
        .col-md-2
            h4 Операций:
                |&nbsp;
                span#stat-count 0
        .col-md-3
            h4 Итого приход:
                |&nbsp;
                span#stat-incoming 0
        .col-md-3
            h4 Итого расход:
                |&nbsp;
                span#stat-outcoming 0
        .col-md-2
            h4 Итог:
                | &nbsp;
                span#stat-avg 0
    table#operations-profit.table.table-striped.table-bordered(data-order='[[ 1, "desc" ]]')
        thead
            tr
                th Сумма
                th Номер операции
                th Операция
                th Заказ
                th Пользователь
                th Дата
                th ЭПС
                th Описние
                th Подтверждение
        tbody

block scripts
    script(src='//cdn.jsdelivr.net/momentjs/latest/moment.min.js', type="text/javascript")
    script(src='//cdn.jsdelivr.net/bootstrap.daterangepicker/2/daterangepicker.js', type="text/javascript")


block stylesheets
    link(rel='stylesheet', href='//cdn.jsdelivr.net/bootstrap.daterangepicker/2/daterangepicker.css')